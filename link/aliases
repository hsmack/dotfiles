# shortcuts to personal stuff
alias www='cd /var/www'
alias dot='cd ~/dotfiles'

# Dir navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -'
alias ~='cd ~'
alias ll='tree --dirsfirst -ChFupDaLg 1'  # requires brew install tree
alias ltr='ls -ltr'

# Git
alias g="git status"
alias ga="git add"
alias gaa="git add --all ."
alias gc="git commit -m"
alias gb="git branch"
alias gba="git branch -a"
alias gbd="git branch -d"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gcot="git checkout -t"
alias gcof="git checkout -f"
alias gf="git fetch"
alias gm="git merge"
alias gmn="git merge --no-ff"
alias gr="git rebase"
alias gri="git rebase -i"
alias griu="git rebase -i @{upstream}"
alias gl="git log"
alias glr=" git --no-pager log --graph --abbrev-commit --date=relative -10 --all --pretty='tformat:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'"
alias gs="git show"
alias gd="git diff"
alias gbl="git blame"
alias gps="git push"
alias gpsd="git push --delete"
alias gpso="git push -u origin"
alias gpsdo="git push --delete origin"
alias gpl="git pull"

# TMUX
alias ta="tmux attach"
alias tnh="tmux new henry"
alias tls="tmux list-sessions"
alias tk="tmux kill-server"

# Utilities
alias a="ack -ia"
alias dir='ls -al |more'
alias grep='GREP_COLOR="1;35;40" LANG=C grep --color=auto'
alias grepnc='grep'
alias h="history"
alias q="$HOME/bin/subl"

# File size
alias fs="stat -f '%z bytes'"
alias df="df -h"

# Recursively delete `.DS_Store` files
alias dsstore="find . -name '*.DS_Store' -type f -ls -delete"


